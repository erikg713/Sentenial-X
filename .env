# Flask Settings
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_APP=sentinel_core.py

# Logging
LOG_LEVEL=DEBUG
LOG_PATH=analytics/memory_scan_logs/emulation.log

# PostgreSQL Database
DATABASE_URL=postgresql://user:password@localhost:5432/sentenialx_db

# Redis (optional, for caching/pub-sub)
REDIS_URL=redis://localhost:6379/0

# Threat Intelligence Integration
THREAT_INTEL_API_KEY=your_threat_intel_api_key_here

# Data Exfiltration Endpoint (for controlled emulation)
EXFILTRATION_ENDPOINT=https://omega-clouddrop.biz/data

# PowerShell Emulation Path
POWERSHELL_EXECUTABLE=pwsh

# SMTP Mail (for alerts/notifications)
SMTP_SERVER=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USERNAME=username
SMTP_PASSWORD=password

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET=mydevjwtkey

# Feature Flags
ENABLE_DEEP_EMULATION=true
ENABLE_GUI_DASHBOARD=true