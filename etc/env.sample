# etc/env.sample

# =================================================================
# 1. CORE APPLICATION & SECURITY
# =================================================================
FLASK_ENV=development
FLASK_DEBUG=1
# NOTE: MUST be changed from default for any production environment!
SECRET_KEY=supersecret_replace_this_with_random_string
JWT_SECRET=mydevjwtkey_replace_this_with_another_string

# LOGGING
LOG_LEVEL=DEBUG
LOG_PATH=analytics/memory_scan_logs/emulation.log
LOG_CONFIG_PATH=etc/logging.conf


# =================================================================
# 2. DATABASE & CACHING SERVICES
# =================================================================
DATABASE_URL=postgresql://user:password@db:5432/sentenialx_db
REDIS_URL=redis://redis:6379/0

# POSTGRES initialization variables (used by docker-compose)
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=sentenialx_db


# =================================================================
# 3. SERVICE ENDPOINTS & FEATURE TOGGLES
# =================================================================
ENABLE_DEEP_EMULATION=true
ENABLE_GUI_DASHBOARD=true
ENABLE_COMPLIANCE_ENGINE=false

# INTERNAL SERVICE CONNECTION POINTS (Docker service names)
THREAT_ENGINE_ENDPOINT=http://threat-engine:8001/api/v1/score
MEMORY_CORE_URL=http://memory-core:8002/vector_store

# EXTERNAL THREAT INTEL INTEGRATION
THREAT_INTEL_API_KEY=devkey123_replace_with_real_key
EXFILTRATION_ENDPOINT=https://omega-clouddrop.biz/data


# =================================================================
# 4. NOTIFICATIONS (SMTP)
# =================================================================
SMTP_SERVER=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USERNAME=username_replace_with_real_username
SMTP_PASSWORD=password_replace_with_real_password
SMTP_SENDER_EMAIL=alerts@sentenialx.com
SMTP_RECIPIENT_EMAIL=admin@sentenialx.com
