# -------------------------------
# Sentenial-X CLI Environment
# -------------------------------

# Agent identity and API
AGENT_ID=sentenial_agent_001
AGENT_NAME=AI_Operator
AGENT_ROLE=full_operator

# Memory / Database
MEMORY_BACKEND=sqlite           # options: sqlite, postgres, redis
DB_PATH=sentenial.db            # path if using SQLite
POSTGRES_URL=postgresql://user:pass@localhost:5432/sentenial_db  # if using Postgres

# Logging
LOG_LEVEL=DEBUG                 # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/sentenial.log     # ensure logs/ folder exists

# Telemetry
TELEMETRY_ENABLED=True
TELEMETRY_SOURCES=network_monitor,endpoint_sensor

# Orchestrator
ORCHESTRATOR_URL=http://localhost:8000
ORCHESTRATOR_TOKEN=changeme12345

# WormGPT / Detection
WORMGPT_TEMPERATURE=0.7

# Alerts
ALERT_DEFAULT_SEVERITY=medium

# Simulation
SIMULATOR_ENABLED=True

# Optional: API Keys / External Integrations
# EXTERNAL_API_KEY=your_api_key_here

# -------------------------------
# End of Sentenial-X .env
# -------------------------------
