# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_APP=sentinel_core.py

# Logging
LOG_LEVEL=DEBUG
LOG_PATH=analytics/memory_scan_logs/emulation.log

# Database (PostgreSQL example)
DATABASE_URL=postgresql://user:password@localhost:5432/sentenialx_db

# Redis for caching or pub/sub (optional)
REDIS_URL=redis://localhost:6379/0

# API Keys / Tokens (placeholders)
THREAT_INTEL_API_KEY=your_threat_intel_api_key_here
EXFILTRATION_ENDPOINT=https://omega-clouddrop.biz/data

# PowerShell / Windows Execution (for emulation environment)
POWERSHELL_EXECUTABLE=pwsh

# SMTP for alert emails (optional)
SMTP_SERVER=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USERNAME=username
SMTP_PASSWORD=password

# Authentication secrets (JWT or Flask sessions)
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# Other flags
ENABLE_DEEP_EMULATION=true
ENABLE_GUI_DASHBOARD=true